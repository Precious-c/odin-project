<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@400;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,200,0,0" />
  </head>
  <body>
    <h1 class="h1 text-center"><%= title %></h1>
    <p class="text-body-secondary text-center">Welcome to <%= title %></p>

    <div class="d-flex justify-content-between">
      <p><%= search %></p>
      <form class="d-flex " role="search" method="POST" action="/search">
        <input class="form-control me-2 search-field" type="search" placeholder="Search" aria-label="Search" name="search">
        <button class="btn btn-outline-success search-field-button" type="submit">Search</button>
      </form>
    </div>
    

    
    <div class="container text-center">
      <div class="row">
        <div class="category col-sm-2">
          <h2 class="h2">Categories</h2>
          <ul class="list-group">
            <% categories.forEach(item => { %>
              <li><a href="#" class="list-group-item d-flex justify-content-between align-items-center">
                <%= item.categoryName %>
                <span class="badge bg-primary rounded-pill"><%= item.noOfItems %></span> 
              </a></li>
            <%})%>
            
          </ul>
          <a class="btn btn-primary" href="/new-category">New Entry</a>
          <a class="btn btn-primary" href="/add-item">New Item</a>
        </div>

        
        <div class="row row-cols-1 row-cols-md-2 g-3 col-sm-9">
          <% items.forEach(item => { %>
            <div class="col w-25 p-3 col-sm-2 item" id="<%=item.id%>">
              <div class="card h-100">
                <img src="images/h/<%= item.image.filename %>" class="card-img-top img-fluid img-thumbnail" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><a href="/item/<%=item.id%>"><%= item.itemName %></a></h5>
                  <p class="card-text"><%= item.itemPrice %></p>
                  <span class="badge bg-primary rounded-pill"><%= item.numberInStock %></span>
                  <!-- <span class="badge bg-primary rounded-pill deleteItemButton"><span class="material-symbols-outlined">delete</span></span> -->
                </div>
              </div>
            </div>
          <%})%>  

          <% messages.forEach(message => { %>
            <div class="flash-message alert alert-warning" role="alert" style="height: 57px;">
                <%= message %>
            </div>
          <% }); %>    

        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="javascripts/index.js"></script>
  </body>
</html>

